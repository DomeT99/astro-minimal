---
import { Icon } from "astro-icon";

interface Props {
  title: string;
  date: string;
  description: string;
  devLink?: string;
  slug?: string;
}

const { title, date, description, slug, devLink } = Astro.props;
---

<div class="card min-18-vh">
  <div class="media-content has-text-left h-6">
    <a href={slug}>
      <h4 class="title is-size-4">
        {title}
      </h4>
    </a>
    <p class="subtitle is-size-5">{date}</p>
    <div class="columns">
      <div class="column is-11">
        <p>{description}</p>
      </div>
      <div class="column is-1">
        <a href={devLink}> <Icon size={38} name="fa-brands:dev" /></a>
      </div>
    </div>
  </div>
</div>
<style>
  .columns {
    margin-left: -0.75rem;
    margin-right: -0.75rem;
    margin-top: -0.75rem;
  }
</style>
